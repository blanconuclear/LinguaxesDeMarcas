<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE familias [
    <!ELEMENT familias (familia+)>
    <!ELEMENT familia ((padre | madre), (padre | madre)?, hijo+)>
    <!ELEMENT padre (nombre, apellido, apellido, (dni?, edad?))>
    <!ELEMENT madre (nombre, apellido, apellido, (dni?, edad?))>
    <!ELEMENT hijo (nombre, apellido, apellido, (edad))>

    <!ELEMENT nombre (#PCDATA)>
    <!ELEMENT apellido (#PCDATA)>
    <!ELEMENT dni (#PCDATA)>
    <!ELEMENT edad (#PCDATA)>

    <!ATTLIST padre id ID #IMPLIED>
    <!ATTLIST madre id ID #IMPLIED>
    <!ATTLIST hijo id ID #IMPLIED>
]>


