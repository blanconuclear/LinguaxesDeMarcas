<!DOCTYPE geografia-mundial [ <!-- Declaración del tipo de documento -->
    <!ELEMENT geografia-mundial (pais)> <!-- Definición del elemento raíz -->
    <!ELEMENT pais (nombre, continente, capital)> <!-- Definición del elemento "pais" -->
    <!ELEMENT nombre (#PCDATA)> <!-- Definición del elemento "nombre" como datos de caracteres -->
    <!ELEMENT continente (#PCDATA)> <!-- Definición del elemento "continente" como datos de caracteres -->
    <!ELEMENT capital EMPTY> <!-- Definición del elemento "capital" como vacío -->
    <!ATTLIST capital
        nombre CDATA ""> <!-- Definición del atributo "nombre" para el elemento "capital"
        -->
]>

<?xml version="1.0" encoding="UTF-8"?>
<geografia-mundial>
    <pais>
        <nombre>España</nombre>
        <continente>Europa</continente>
        <capital nombre="Madrid" />
    </pais>
</geografia-mundial>




